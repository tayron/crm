	<persistence-unit name="CRMJpaTest" transaction-type="RESOURCE_LOCAL">	

        <class>br.com.crm.entidades.pessoas.Cliente</class>
        <class>br.com.crm.entidades.pessoas.Usuario</class>
        <class>br.com.crm.entidades.pessoas.autorizacao.PermissaoDTO</class>
        <class>br.com.crm.entidades.pessoas.autorizacao.TipoPermissaoDTO</class>        
	    
	    <properties>
	      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
	      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
	      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/crmtest" />
	      <property name="javax.persistence.jdbc.user" value="root" />
	      <property name="javax.persistence.jdbc.password" value="123456" />
	      <property name="hibernate.show_sql" value="true"/>
	      <property name="hibernate.sql_format" value="true"/>
	      <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
	      <property name="hibernate.connection.charSet" value="UTF-8"/>
	    </properties>
	</persistence-unit>	
